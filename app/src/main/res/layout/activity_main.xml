<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <GridLayout
       android:id="@+id/gridlayout_form"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:orientation="vertical">
       <TextView
           android:id="@+id/textview_form_name"
           android:text="@string/form_name"
           android:textSize="20dp"
           android:textColor="@color/txtcolor"
           android:layout_marginTop="20dp"
           android:paddingBottom="10dp"
           />
       <TextView
           android:id="@+id/textview_form_mobile_no"
           android:text="@string/form_mobile"
           android:textSize="20dp"
           android:textColor="@color/txtcolor"
           android:layout_marginTop="20dp"
           android:paddingBottom="10dp"
           />
       <TextView
           android:id="@+id/textview_form_email"
           android:text="@string/form_email"
           android:textSize="20dp"
           android:textColor="@color/txtcolor"
           android:layout_marginTop="20dp"
           android:paddingBottom="10dp"
           />
       <TextView
           android:id="@+id/textview_form_address"
           android:text="@string/form_address"
           android:textSize="20dp"
           android:textColor="@color/txtcolor"
           android:layout_marginTop="20dp"
           android:paddingBottom="10dp"
           />
       <TextView
           android:id="@+id/textview_form_no"
           android:text="@string/form_no"
           android:textSize="20dp"
           android:textColor="@color/txtcolor"
           android:layout_marginTop="20dp"
           android:paddingBottom="10dp"
           />
       </GridLayout>
    <GridLayout
        android:id="@+id/gridlayout_form1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/gridlayout_form"
        android:orientation="vertical"
        android:layout_marginLeft="30dp">
        <EditText
            android:id="@+id/edittext_form_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/edittext_form_mobile_no"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="number"
            />
        <EditText
            android:id="@+id/edittext_form_email"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/edittext_form_address"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/edittext_form_no"
            android:layout_width="160dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            />
        </GridLayout>
    <TextView
        android:id="@+id/textview_form_date_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/txtcolor"
        android:textSize="20dp"
        android:text="@string/form_date_birth"
        android:layout_below="@+id/gridlayout_form"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/edittext_form_date_birth"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textview_form_date_birth"
        android:layout_below="@+id/gridlayout_form"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:enabled="false"
        android:textColor="@color/txtcolor"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageview_form_birth_date"
        android:layout_toRightOf="@+id/edittext_form_date_birth"
        android:layout_below="@+id/gridlayout_form"
        android:src="@drawable/calender"
        android:layout_marginLeft="8dp"
        />
    <RadioGroup
        android:id="@+id/radiogroup_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textview_form_date_birth"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">
        <RadioButton
            android:id="@+id/radiobutton_form_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radiobutton_form_male"
            android:textColor="@color/txtcolor"
            android:textSize="20dp"/>
        <RadioButton
            android:id="@+id/radiobutton_form_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radiobutton_form_female"
            android:textColor="@color/txtcolor"
            android:textSize="20dp"/>
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/form_button_next"
        android:id="@+id/button_form_submit"
        android:layout_below="@+id/radiogroup_form"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="40dp"/>
</RelativeLayout>
</ScrollView>

